<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <ImageButton
    android:id="@+id/pomodoro_start_stop_button"
    tools:src="@drawable/ic_action_start_wear"
    android:layout_width="192dp"
    android:layout_height="192dp"
    android:layout_centerInParent="true"
    style="?android:attr/borderlessButtonStyle"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:scaleType="centerCrop"
    android:contentDescription="@string/cd_start_stop_button"
    android:layout_marginTop="-48dp"
    android:layout_marginBottom="24dp"/>

  <TextView
    android:id="@+id/pomodoro_time"
    tools:text="23:12"
    android:singleLine="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/pomodoro_start_stop_button"
    style="@style/TextAppearance.AppCompat.Display1"
    android:layout_marginBottom="16dp"/>

  <TextView
    android:id="@+id/pomodoro_description"
    tools:text="Working on Pomdoro #3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/pomodoro_time"
    style="@style/TextAppearance.AppCompat.Medium"/>

</RelativeLayout>
