<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vngrs.android.pomodoro" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data android:name="com.google.android.gms.version"
          android:value="@integer/google_play_services_version"/>

        <activity android:name=".ui.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".receivers.PomodoroAlarmReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="${applicationId}.action.ALARM" />
            </intent-filter>
            <intent-filter>
                <action android:name="${applicationId}.action.ALARM_TICK" />
            </intent-filter>
        </receiver>
        <!--<receiver-->
            <!--android:name=".receivers.PomodoroAlarmTickReceiver"-->
            <!--android:enabled="true"-->
            <!--android:exported="false" >-->
        <!--</receiver>-->
        <!--<receiver-->
            <!--android:name=".receivers.PomodoroControlReceiver"-->
            <!--android:enabled="true"-->
            <!--android:exported="false" >-->
        <!--</receiver>-->

        <service
            android:name=".service.PomodoroService"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="${applicationId}.action.START" />
            </intent-filter>
            <intent-filter>
                <action android:name="${applicationId}.action.STOP" />
            </intent-filter>
        </service>
    </application>

</manifest>
